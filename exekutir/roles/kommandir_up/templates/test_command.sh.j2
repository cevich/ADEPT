{{ "ssh" ~
   " -o UserKnownHostsFile=/dev/null" ~
   " -o StrictHostKeyChecking=no" ~
   " -o IdentityFile=" ~ (ansible_private_key_file | quote) ~
   " -o KbdInteractiveAuthentication=no" ~
   " -o PreferredAuthentications=publickey" ~
   " -o PasswordAuthentication=no" ~
   " -o ConnectTimeout=" ~ wait_for_timeout ~
   " -p " ~ ansible_ssh_port | default(ansible_port | default(22)) ~
   " -o User=" ~ ansible_ssh_user | default('root') ~
   " " ~ ansible_ssh_host | default(ansible_host) ~
   " '/bin/sleep 0.1'" }}
