<testsuites>
    <testsuite name="{% if peon_metadata is defined %}{{ peon_metadata.name }}{% else %}{{ inventory_hostname }}{% endif %}" timestamp="{{ ansible_date_time.date }}" tests="1" errors="0" failures="1" skipped="0">
        <testcase classname="{% if peon_metadata is defined %}{{ peon_metadata.name }}{% else %}{{ inventory_hostname }}{% endif %}.{{ failure_component }}" name="all" time="0">
            <failure message="{{ failure_message }}"/>
        </testcase>
    </testsuite>
</testsuites>
