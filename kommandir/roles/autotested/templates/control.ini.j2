[Control]

# No matter what, always exclude subtests (or sub-subtests) on this list
exclude = example,subexample,pretest_example,intratest_example,
          posttest_example,
          docker_cli/run_volumes/volumes_rw,
          {%- if is_atomic -%}
          {# Atomic host does not have git #}
          docker_cli/build/git_path,
          {%- endif -%}
          {%- if not is_enterprise -%}
          {# We never test the RHEL base-image on Fedora #}
          redhat/rhel_push_plugin,
          redhat/packaging,
          {# Fedora needs to build it's test-image, disable puller #}
          docker_test_images/puller
          {% endif %}

# Only consider running these subtests (or sub-subtests)
{% if job_subthings | default() not in empty %}
subthings = {{ job_subthings | join(",") }}
{% endif %}

[Bugzilla]

# Exclude tests with a whiteboard matching a special pattern
# See Docker Autotest Documentation
username = {{ private_bugzilla_username | default("") }}
password = {{ private_bugzilla_password | default("") }}
